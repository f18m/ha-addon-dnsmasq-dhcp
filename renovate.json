{
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchCategories": ["golang"],
      "groupName": "golang modules",
      "groupSlug": "golang-modules",
      "enabled": true
    },
    {
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    }
  ]
}

# Automatically generated do not edit
# See https://thekelleys.org.uk/dnsmasq/docs/dnsmasq-man.html

# To disable dnsmasq's DNS server functionality.
port=0

no-resolv
no-hosts
keep-in-foreground
log-facility=-
no-poll
user=root
log-dhcp    # log dhcp related messages

# To enable dnsmasq's DHCP server functionality
dhcp-range={{ .network.range_start }},{{ .network.range_end }},{{ .network.netmask }},{{ .default_lease }}

# Set static IPs
{{ range .hosts }}
dhcp-host={{ .mac }},{{ .name }},{{ .ip }},infinite
{{ end }}

# Set gateway -- i.e. option #3 of DHCP specs
dhcp-option=3,{{ .network.gateway }}

# Set DNS server(s)) -- i.e. option #6 of DHCP specs
dhcp-option=6{{ range .dns }},{{ . }}{{ end }}
